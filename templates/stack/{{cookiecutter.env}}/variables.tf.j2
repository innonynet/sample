# {{ cookiecutter.env | capitalize }} Environment - Variables

variable "environment" {
  type        = string
  description = "Environment name"
  default     = "{{ cookiecutter.env }}"
}

variable "project" {
  type        = string
  description = "Project name"
  default     = "{{ cookiecutter.project_name }}"
}

variable "region" {
  type        = string
  description = "Azure region"
  default     = "{{ cookiecutter.region }}"
}

variable "network_cidr" {
  type        = string
  description = "Network CIDR block"
  default     = "{{ cookiecutter.network_cidr }}"
}

variable "repository" {
  type        = string
  description = "Source repository"
  default     = "your-org/infra-template"
}

variable "tags" {
  type        = map(string)
  description = "Additional tags"
  default     = {}
}

# VM-related variables

variable "admin_username" {
  type        = string
  description = "Admin username for VM"
  default     = "azureuser"
}

variable "ssh_public_key" {
  type        = string
  description = "SSH public key for VM authentication"
}

variable "vm_size" {
  type        = string
  description = "VM size"
  default     = "{{ cookiecutter.vm_size }}"
}

# Observability variables

variable "enable_observability" {
  type        = bool
  description = "Enable observability module"
  default     = true
}

variable "oncall_email" {
  type        = string
  description = "On-call email for alert notifications"
  sensitive   = true
  default     = ""
}
